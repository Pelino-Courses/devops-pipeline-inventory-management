{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": "off",
    "quotes": "off",
    "semi": "off",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": [
        "tests/**/*.js"
      ],
      "globals": {
        "request": "readonly",
        "app": "readonly"
      }
    }
  ]
}